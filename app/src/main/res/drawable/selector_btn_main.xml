<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape android:shape="rectangle" android:padding="10dp">
            <gradient
                android:startColor="@color/white"
                android:centerColor="@color/blue_10"
                android:endColor="@color/white"
                android:angle="90" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" android:padding="10dp">
            <gradient
                android:startColor="@color/blue_10_trans"
                android:centerColor="@color/blue_10_trans"
                android:endColor="@color/blue_10_trans"
                android:angle="90" />
        </shape>
    </item>
</selector>