<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/gradient_for_list_premium"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <TextView
                android:id="@+id/head_exemple_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 месяцев"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/discount_exemple_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="скидка -40%"
                android:layout_marginStart="20dp"
                android:textColor="@color/grey_light"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/priceOld_exemple_premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6000р"
                    android:textColor="@color/grey_light"
                    android:textSize="20sp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/price_exemple_premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3000р"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/discription_exemple_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15р в неделю"
                android:textColor="@color/grey_light"
                android:textSize="14sp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>