<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/linear_exemple_exersice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/gradient_for_list_exersice_focus"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_exersice_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:srcCompat="@mipmap/ic_btn_play_meditation" />

            <TextView
                android:id="@+id/title_exersice_view"
                style="@style/TextExersiseName"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Название" />

            <ImageView
                android:id="@+id/recycler_list_full_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/btn_down" />

        </LinearLayout>

        <TextView
            android:id="@+id/desc_exersice_view"
            style="@style/TextExersiseDiscription"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="описание" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>